/**index.wxss**/
.map-container {
  box-sizing: border-box;
  background-color: #009999;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
  transition: all .5s linear;
  margin-top: -60rpx;
  width: 100%;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.small-map {
  flex: 2;
}
.big-map {
  flex: 4;
}

.content-wrap {
  flex: 4;
  width: 100%;
  text-align: left;
  overflow-y: auto;
  position: relative;
  padding-bottom: 20px;
  box-sizing: border-box;
  transition: all .5s linear;
}
.no-more-content,
.more-content {
  text-align: center;
  font-size: 14px;
}

.icon-wrap {
  position: absolute;
  right: 20px;
  border: 1px solid #009999;
  background-color: #009999;
  border-radius: 100%;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 2px 2px 5px #009999;
}

.handle-icon-wrap {
  bottom: 30rpx;
  background-color: #fff;
}

.handle-icon-wrap icon {
  color: #009999;
  font-size: 60rpx;
}

.add-icon-wrap {
  bottom: 150rpx;
}

.add-icon-wrap icon {
  font-size: 60rpx;
  color: #fff;
}
.share-icon-wrap icon {
  font-size: 50rpx;
  color: #fff;
}

.share-icon-wrap {
  bottom: 30rpx;
}

.share-icon-wrap::after {
  border: none;
}

.places-wrap {
  /* padding: 20rpx; */
  font-size: 16px;
}

.places-item {
  padding: 10px 20rpx 10rpx 30rpx;
  border-left: 1px solid #009999;
  position: relative;
  border-bottom: 1px dashed #eee;
}

.places-item:first-child {
  border-top: 1px dashed #eee;
}

.places-item::before {
  position: absolute;
  left: 0;
  top: 36%;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border: 2px solid #009999;
  background-color: #fff;
  transform: translate(-50%, -50%);
  border-radius: 100%;
}

.places-item:first:before {
  top: 10%;
}

.place-name {
  margin-bottom: 6rpx;
  font-weight: 700;
}

.place-time {
  color: #999;
  font-size: 13px;
}

.hint {
  font-size: 14px;
  text-align: center;
  margin-top: 10px;
}

.no-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 16px;
  text-align: center;
  width: 100%;
}

.generate-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 1px -1px 3px #999;
}

.generate-btn {
  background-color: #009999;
  color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 14px;
  border-radius: 35rpx;
  width: 50%;
  text-align: center;
}

.place-item {
  display: flex;
  align-items: center;
}

.place-item .time-wrap {
  padding: 20rpx 40rpx 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  border-right: 2px solid #009999;
  position: relative;
  
}

.time-wrap text {
  text-align: center;
}

.time-wrap .time {
  font-size: 16px;
  color: #333;
}

.time-wrap .date {
  font-size: 14px;
  color: #999;
  margin-top: -8rpx;
}

.place-item .name-wrap {
  flex: 1;
  padding-left: 40rpx;
}
.place-icon-wrap {
  width: 50rpx;
  height: 50rpx;
  border: 1px solid #009999;
  border-radius: 100%;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translate(50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}
.place-icon {
  display: block;
  font-size: 36rpx;
  color: #009999;
  margin-top: -10rpx;
}