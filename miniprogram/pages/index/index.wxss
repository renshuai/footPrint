/**index.wxss**/
ec-canvas {
  width: 100%;
  flex: 2;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  background-color: #006699;
}
.content-wrap {
  flex: 3;
  width: 100%;
  text-align: left;
  overflow-y: auto;
  position: relative;
  padding-bottom: 20px;
  box-sizing: border-box;
}

.icon-wrap {
  position: absolute;
  right: 20px;
  border: 1px solid #006699;
  background-color: #006699;
  border-radius: 100%;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 2px 2px 5px #006699;
}

.handle-icon-wrap {
  bottom: 20rpx;
  background-color: transparent;
}

.handle-icon-wrap icon {
  color: #006699;
  font-size: 60rpx;
}

.add-icon-wrap {
  bottom: 140rpx;
}

.add-icon-wrap icon {
  font-size: 60rpx;
  color: #fff;
}
.share-icon-wrap icon {
  font-size: 50rpx;
  color: #fff;
}

.share-icon-wrap {
  bottom: 260rpx;
}

.places-wrap {
  padding: 20rpx;
  font-size: 16px;
}

.places-item {
  padding: 0 20rpx 20rpx;
  border-left: 1px solid #006699;
  position: relative;
}

.places-item::before {
  position: absolute;
  left: 0;
  top: 0;
  content: '';
  width: 16rpx;
  height: 16rpx;
  background-color: #006699;
  transform: translate(-50%, -50%);
  border-radius: 100%;
}

.place-name {
  margin-bottom: 6rpx;
}

.place-time {
  color: #999;
  font-size: 13px;
}

.hint {
  font-size: 14px;
  text-align: center;
  margin-top: 10px;
}

.no-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 16px;
  text-align: center;
  width: 100%;
}